{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Регистрация</h1>

        {% if error %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}

        {% for flash_error in app.flashes('error') %}
            <div class="alert alert-danger">{{ flash_error }}</div>
        {% endfor %}

        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control' ~ (form.email.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.password) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control' ~ (form.password.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
            {{ form_errors(form.password) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.confirmPassword) }}
            {{ form_widget(form.confirmPassword, {'attr': {'class': 'form-control' ~ (form.confirmPassword.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
            {{ form_errors(form.confirmPassword) }}
        </div>

        <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
