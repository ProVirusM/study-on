<form method="post" action="{{ path('app_course_delete', {'id': course.id}) }}"
      onsubmit="return confirm('Вы уверены, что хотите удалить этот курс?');"
      class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ course.id) }}">
    <button class="btn btn-danger btn-sm">
        <i class="fas fa-trash-alt"></i> Удалить курс
    </button>
</form>