{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="h3 mb-0">{{ lesson.title }}</h1>
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <div>
                        <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}" class="btn btn-sm btn-warning me-2">
                            <i class="fas fa-edit"></i> Редактировать
                        </a>
                        {{ include('lesson/_delete_form.html.twig') }}
                    </div>
                    {% endif %}
                </div>
            </div>

            <div class="card-body">
                <div class="mb-4">
                    <h5 class="text-muted">Курс:</h5>
                    <a href="{{ path('app_course_show', {'id': course.id}) }}" class="btn btn-outline-primary">
                        <i class="fas fa-book"></i> {{ course.title }}
                    </a>
                </div>

{#                <div class="mb-3">#}
{#                    <h5 class="text-muted">Порядковый номер:</h5>#}
{#                    <span class="badge bg-secondary fs-6">{{ lesson.orderNumber }}</span>#}
{#                </div>#}

                <div class="lesson-content mt-4 p-3 bg-light rounded">
                    <h4 class="mb-3">Содержание урока:</h4>
                    <div class="content-text">
                        {{ lesson.content|nl2br }}
                    </div>
                </div>
            </div>

            <div class="card-footer bg-light">
                <a href="{{ path('app_course_show', {'id': course.id}) }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Вернуться к курсу
                </a>
            </div>
        </div>
    </div>

    <style>
        .lesson-content {
            border-left: 4px solid #0d6efd;
        }
        .content-text {
            white-space: pre-wrap;
        }
    </style>
{% endblock %}