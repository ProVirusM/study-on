{{ form_start(form, {'attr': {'class': 'needs-validation p-4 rounded shadow-sm bg-light', 'novalidate': 'novalidate'}}) }}
<div class="mb-3">
    {% for child in form %}
        {% if 'hidden' not in child.vars.block_prefixes %}
            <div class="form-group mb-4">
                {{ form_label(child, null, {'label_attr': {'class': 'form-label fw-bold mb-2'}}) }}
                {{ form_widget(child, {'attr': {'class': 'form-control rounded-pill px-4 py-2'}}) }}
                {{ form_help(child, {'attr': {'class': 'form-text text-muted small mt-1'}}) }}
                {{ form_errors(child, {'attr': {'class': 'invalid-feedback d-block'}}) }}
            </div>
        {% else %}
            {{ form_widget(child) }}
        {% endif %}
    {% endfor %}
</div>

<button class="btn btn-primary rounded-pill px-4 py-2 fw-bold text-white">
    <i class="bi bi-save me-2"></i>{{ button_label|default('Сохранить') }}
</button>
{{ form_end(form) }}