{% extends 'base.html.twig' %}

{% block title %}Все уроки{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Все уроки</h1>

        <div class="row">
            {% for lesson in lessons %}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">{{ lesson.title }}</h5>
                            <p class="card-text">{{ lesson.content }}</p>
                            <p class="text-muted">Курс: {{ lesson.course.title }}</p>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center">Уроки не найдены.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
